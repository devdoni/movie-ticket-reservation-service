<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.movie.movieticketapi.User.UserMapper">
    <select id="selectUserByUId" parameterType="String" resultType="int">
        SELECT
            COUNT(*)
        FROM
            TBL_USERS
        WHERE
            U_ID = #{u_id}
    </select>
    <insert id="insertNewUser" parameterType="com.movie.movieticketapi.dto.RegisterUserDto">
        INSERT INTO
            TBL_USERS(
                      U_ID,
                      U_PW,
                      U_NICK,
                      U_AGE,
                      U_GENDER,
                      U_MAIL,
                      U_PHONE
        ) VALUES (
                  #{u_id},
                  #{u_pw},
                  #{u_nick},
                  #{u_age},
                  #{u_gender},
                  #{u_mail},
                  #{u_phone}
                         )
    </insert>
</mapper>